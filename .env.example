# Token do Telegram
TELEGRAM_BOT_TOKEN=seu_token_aqui

# Token Hugging Face (GRÁTIS)
# Obtenha em: https://huggingface.co/settings/tokens
HUGGINGFACE_API_TOKEN=hf_xxxxxxxxxxxxxxxxxxxx

# ========== MODELOS ==========

# Modelo de IMAGEM (padrão: SDXL - melhor qualidade)
HF_IMAGE_MODEL=stabilityai/stable-diffusion-xl-base-1.0
# Alternativas:
#   - stabilityai/stable-diffusion-2-1 (mais rápido)
#   - runwayml/stable-diffusion-v1-5 (clássico)

# Modelo de VÍDEO (grátis!)
HF_VIDEO_MODEL=damo-vilab/text-to-video-ms-1.7b
# Alternativas:
#   - ali-vilab/text-to-video-ms-1.7b

# ========== CONFIGURAÇÕES ==========

# Prompt negativo (o que evitar)
NEGATIVE_PROMPT=blurry, bad quality, distorted, ugly, watermark

# Configurações de IMAGEM
IMAGE_WIDTH=1024
IMAGE_HEIGHT=1024
IMAGE_STEPS=30
IMAGE_GUIDANCE=7.5

# Configurações de VÍDEO
VIDEO_STEPS=25
VIDEO_FRAMES=16
